<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppComponent.Button.DialogCancel" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="cornerRadius">8dp</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="strokeColor">?attr/colorError</item>

    </style>

    <style name="Widget.AppComponent.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="cornerRadius">4dp</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:layout_width">wrap_content</item>

    </style>

    <style name="Widget.AppComponent.Button.DialogOk">

        <item name="android:minWidth">120dp</item>
        <item name="cornerRadius">8dp</item>

    </style>
    
    <style name="Widget.AppComponent.HomeButton" parent="Widget.MaterialComponents.Button">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/home_card_height</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="backgroundTint">?colorSurface</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconPadding">@dimen/margin_normal</item>
        <item name="iconSize">54dp</item>
        <item name="iconTint">@null</item>
        <item name="rippleColor">?colorOnSurface</item>

    </style>

</resources>
